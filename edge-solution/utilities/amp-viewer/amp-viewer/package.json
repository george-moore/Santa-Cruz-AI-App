{
    "name": "amp-viewer",
    "version": "1.0.9",
    "description": "Viewer for AMP client demo",
    "main": "index.js",
    "scripts": {
        "test": "node ./node_modules/jest/bin/jest.js",
        "tslint": "node ./node_modules/tslint/bin/tslint -p ./tsconfig.json",
        "build": "node ./node_modules/typescript/bin/tsc -p .",
        "dockerbuild": "node ./scripts/dockerBuild.js --docker-build",
        "dockerpush": "node ./scripts/dockerBuild.js --docker-push",
        "preversion": "npm test",
        "version": "node ./scripts/dockerBuild.js --docker-build",
        "postversion": "node ./scripts/dockerBuild.js --docker-push",
        "postinstall": "node ./scripts/setupDevEnvironment.js"
    },
    "author": "sseiber",
    "license": "MIT",
    "dependencies": {
        "@azure/arm-mediaservices": "^7.2.0",
        "@azure/cosmos": "^3.7.4",
        "@azure/ms-rest-nodeauth": "^3.0.5",
        "@hapi/boom": "^9.1.0",
        "@hapi/hapi": "^19.1.1",
        "@hapi/inert": "^6.0.1",
        "@hapi/wreck": "^17.0.0",
        "fs-extra": "^9.0.1",
        "nconf": "^0.10.0",
        "query-string": "^6.13.1",
        "spryly": "^2.0.8",
        "uuid": "^7.0.3"
    },
    "devDependencies": {
        "@types/azure": "^0.9.20",
        "@types/hapi__hapi": "^19.0.3",
        "@types/hapi__inert": "^5.2.0",
        "@types/jest": "^26.0.4",
        "@types/lru-cache": "^5.1.0",
        "@types/nconf": "0.10.0",
        "@types/node": "^14.0.23",
        "jest": "^26.1.0",
        "ts-jest": "^26.1.2",
        "tslint": "^5.20.1",
        "typescript": "^3.9.7"
    },
    "jest": {
        "rootDir": "./src/",
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ],
        "transform": {
            ".tsx?": "ts-jest"
        },
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "./__mocks__/fileMock.js"
        }
    }
}
